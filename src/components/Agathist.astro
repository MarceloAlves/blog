---
import ShiftBy from './ShiftBy.astro'
---

<a
  class="group block rounded border-2 border-pink-500 bg-gray-100 p-4 text-center shadow-md dark:bg-slate-800"
  href="https://agath.ist"
  rel="noreferrer"
  target="_blank"
>
  <ShiftBy y={-6}>
    <div class="flex flex-col">
      <div
        class="text-animation bg-gradient-to-r from-rose-500 via-pink-500 to-orange-400 bg-clip-text font-system text-6xl font-bold leading-snug text-transparent"
      >
        Agathist
      </div>

      <div class="font-serif text-lg 2xl:text-xl">
        <span>Good software by good people.</span>
      </div>

      <div class="font-sans">
        Visit <span
          class="underline transition-colors group-hover:text-pink-500"
          >https://agath.ist</span
        >
        to learn more
      </div>
    </div>
  </ShiftBy>
</a>

<style>
  .text-animation {
    background-size: 200%;
    animation: move-gradient 3s ease infinite;
  }

  @keyframes move-gradient {
    0%,
    100% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 100% 0%;
    }
  }
</style>
