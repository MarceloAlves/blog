---
import BlueSky from '../icons/BlueSky.astro'
import Github from '../icons/Github.astro'
import Rss from '../icons/Rss.astro'
import Contributors from './Contributors.astro'
import Copyright from './Copyright.astro'
import Link from './Link.astro'

const SITEMAP = [
  { href: '/', title: 'Home' },
  { href: '/all-posts', title: 'All Posts' },
  { href: '/tags', title: 'Tags' },
  { href: '/courses', title: 'Courses' },
  { href: '/snippets', title: 'Snippets' },
  { href: '/about', title: 'About' },
  { href: '/contact', title: 'Contact' },
  { href: '/impactful-resources', title: 'Impactful Resources' },
  { href: '/ai', title: 'A.I. Usage' },
]

const LINKS = [
  {
    href: 'https://bsky.app/profile/kyleshevlin.com',
    icon: BlueSky,
    title: 'BlueSky',
  },
  { href: 'https://github.com/kyleshevlin', icon: Github, title: 'Github' },
  { href: 'https://kyleshevlin.com/rss.xml', icon: Rss, title: 'RSS Feed' },
]
---

<footer class="mt-24 bg-gray-900 py-8 text-center text-white dark:bg-gray-800">
  <div class="px-6 md:px-12">
    <div class="stack gap-8 lg:gap-12">
      <div class="stack xl:row gap-8 lg:gap-12 xl:justify-between xl:gap-16">
        <div class="flex justify-center">
          <div class="max-w-[80ch]">
            <Contributors />
          </div>
        </div>

        <div class="stack gap-2 font-sans xl:items-start">
          <div class="text-lg font-bold">Sitemap</div>

          <div
            class="row flex-wrap justify-center gap-3 lg:gap-6 xl:justify-start"
          >
            {
              SITEMAP.map(item => {
                const { href, title } = item

                return <Link href={href}>{title}</Link>
              })
            }
          </div>
        </div>
      </div>

      <div class="stack lg:row-reverse gap-4 lg:items-end lg:justify-between">
        <div class="stack lg:row gap-4 lg:items-center lg:gap-6">
          <div class="flex justify-center">
            <a
              class="font-sans text-accent hover:text-accent-light"
              href="https://kyleshevlingolf.com"
              rel="noreferrer"
              target="_blank"
            >
              Looking for my golf content instead?
            </a>
          </div>

          <div class="flex items-center justify-center lg:-mr-2">
            {
              LINKS.map(link => {
                const { href, icon: Icon, title } = link

                return (
                  <a
                    class="inline-block px-2 py-2 text-accent hover:text-accent-light"
                    href={href}
                    title={title}
                  >
                    <span class="sr-only">{href}</span>
                    <Icon fill="currentColor" width={24} />
                  </a>
                )
              })
            }
          </div>
        </div>

        <div class="font-sans">
          <Copyright /> Kyle Shevlin. All Rights Reserved.
        </div>
      </div>
    </div>
  </div>
</footer>
