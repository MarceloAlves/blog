---
interface Props {
  external?: boolean
  href: string
}

const { external = false, href } = Astro.props

const additionalProps: Partial<Pick<HTMLAnchorElement, 'rel' | 'target'>> = {}
if (external) {
  additionalProps.rel = 'noopener noreferrer'
  additionalProps.target = '_blank'
}
---

<a
  class="text-accent underline transition-all hover:bg-accent hover:text-white"
  href={href}
  {...additionalProps}><slot /></a
>
