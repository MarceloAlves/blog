---
interface Props {
  alt: string
  gifSrc: string
  staticSrc?: string
}

const { alt, gifSrc, staticSrc } = Astro.props
---

<picture class="flex justify-center">
  {
    staticSrc && (
      <source srcset={staticSrc} media="(prefers-reduced-motion: reduce)" />
    )
  }
  <img srcset={gifSrc} alt={alt} />
</picture>
